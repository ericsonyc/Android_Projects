<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
android:background="#00ccccff">

    <ImageView android:layout_width="200dp" android:layout_height="200dp"
    android:id="@+id/imgBack"
    android:layout_centerInParent="true"
    android:background="@drawable/pic8"/>

    <ImageView android:layout_width="28dp" android:layout_height="28dp"
    android:id="@+id/imgCache"
    android:layout_alignRight="@id/imgBack"
    android:layout_alignTop="@id/imgBack"
    android:background="@drawable/cancel"
    android:layout_marginTop="-15dp"
    android:layout_marginRight="-10dp"/>

</RelativeLayout>